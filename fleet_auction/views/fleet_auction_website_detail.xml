<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fleet_auction_detail" name="Auctions" track="1">
        <t t-call="website.layout">
            <t t-foreach="auction_details" t-as="auction">
                <div>
                    <h3><span t-esc="auction.vehicle_name_id.name"></span></h3>
                    <h5><span t-esc="auction.brand"/></h5>
                    <p>Auction starts from <span t-esc="auction.start_price"/></p>
                    <p>Start Date <span t-esc="auction.start_date"/></p>
                    <p>Auction Ends On  <span t-esc="auction.end_date"/></p>
                    <p>Current Status of auction  <span t-esc="auction.fleet_auction_state"/></p>
                    <p>Won Price <span t-esc="auction.won_price"/></p>
                    <p>Customer  <span t-esc="auction.customer_id.display_name"/></p>

                </div>
                <div class="card" style="width: 18rem;">
                    <img src="" class="card-img-top" alt="..."/>
                    <div class="card-body">
                        <h5 class="card-title"><span t-esc="auction.vehicle_name_id.name"></span></h5>
                        <p class="card-text"><span t-esc="auction.start_price"/></p>
                    </div>
                    <div>
                         <a t-att-href="'/fleet_auctions/bid_form/%s' % auction.id" class="btn btn-primary">Add bid</a>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>













