<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_offer_list" model="ir.ui.view">
        <field name="name">list view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
                <list string="list view">
                    <field name="price"/>
                    <field name="partner_id"/>
                    <button name="action_confirm" type="object" icon="fa-check"/>
                    <button name="action_refused" type="object" icon="fa-ban"/>
                    <field name="status"/>
                    <field name="price"/>
                    <field name="date_deadline"/>
                    <field name="validity"/>
                </list>
        </field>
    </record>
    <record id="estate_offer_form" model="ir.ui.view">
        <field name="name">form view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                        <group>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="partner_id"/>

                        </group>
                        <group>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="date_deadline"/>
                            <field name="validity"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
