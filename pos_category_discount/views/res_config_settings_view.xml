<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_category_discount_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="product_and_category_block" position="inside">
                <setting string="Category discount limit" help="Apply category wise discount in pos">
                    <field name="is_category_discount"/>
                </setting>
            </block>
        </field>
    </record>
</odoo>
